@model SimpleSupport.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="row">
    <div class="col-md-4 col-sm-5">
        <div class="panel panel-default">
            <div class="panel-body">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <h3 class="text-center text-primary coolfactor">Create Your Free Account</h3>
                    <hr />
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email)
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-sm" })
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password)
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control input-sm" })
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(m => m.ConfirmPassword)
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input-sm" })
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="col-md-12 text-center">
                                <input type="submit" class="btn btn-primary coolfactor" value="Register" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-8 col-sm-7">
        <h3 class="text-primary coolfactor">Disclaimer</h3>
        <p class="featurefont">
            This system is currently free to use. As such use it at your own risk. We are not liable for any damages as a result of your use of Simple Support.
        </p>
        <p>Very little identfying information is saved in our system. A <strong><em>Case Identifier</em></strong> (which can be anything) to help you determine what case you are looking at and a <strong><em>Party Identifier</em></strong> which can be plantiff and defendant, him and her, fake names, real names, nicknames, jerk, or whatever you want.</p>
        <p>If you do not agree with this statement, especially the first paragraph and our full disclaimer and privacy policy than do not use this free! application.</p>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
