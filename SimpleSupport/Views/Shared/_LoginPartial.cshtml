@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">This Case<span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                    <li>@Html.ActionLink("Summary", "Summary", new { controller = "Cases", id = Url.RequestContext.RouteData.Values["id"] }, null)</li>
                    <li>@Html.ActionLink("Parties", "Index", new { controller = "Party", id = Url.RequestContext.RouteData.Values["id"] }, null)</li>
                    <li>@Html.ActionLink("Children", "Index", new { controller = "Support", id = Url.RequestContext.RouteData.Values["id"] }, null)</li>
                    <li>@Html.ActionLink("Income", "Index", new { controller = "Support", id = Url.RequestContext.RouteData.Values["id"] }, null)</li>
                    <li>@Html.ActionLink("Print", "Print", new { controller = "Support", id = Url.RequestContext.RouteData.Values["id"] }, null)</li>
                </ul>
            </li>
            <li>@Html.ActionLink("Cases", "Index", "Cases")</li>
            <li>@Html.ActionLink("Account", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })</li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
